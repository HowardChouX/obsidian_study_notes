{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++ build active file",
            "command": "g++",
            "args": [
                "-g",
                "${file}",  // 当前文件（如 main.cpp）
                "-o",
                "${workspaceFolder}/build/.gdb/${fileBasenameNoExtension}"  // 输出到 .gdb 文件夹
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": ["$gcc"],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}